<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-center mb-8">ワイン診断</h1>
  
  <div class="max-w-md mx-auto">
    <div class="mb-6">
      <p class="text-sm text-gray-600 mb-2">質問 <%= @step %></p>
      <h2 class="text-2xl font-bold mb-4"><%= @question[:text] %></h2>
    </div>
    
    <div class="space-y-4">
      <% @question[:choices].each do |choice| %>
        <%= form_with url: diagnoses_answer_path(step: @step), method: :post, local: true do %>
          <%= hidden_field_tag :choice_id, choice[:id] %>
          <%= button_tag type: 'submit', class: 'w-full bg-white border-2 border-gray-300 px-6 py-4 rounded-lg hover:border-red-600 hover:bg-red-50 transition text-left' do %>
            <span class="text-lg font-medium"><%= choice[:label] %></span>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>