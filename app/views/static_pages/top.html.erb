<div class="min-h-screen bg-gradient-to-br from-wine-950 via-wine-900 to-wine-800 flex flex-col items-center justify-center p-4 space-y-6 w-full">
  <div class="bg-wine-800 rounded-2xl shadow-2xl p-8 md:p-12 max-w-md w-full">
    <div class="text-center">
      <!-- ワインアイコン -->
      <div class="mb-6">
        <span class="text-8xl">🍷</span>
      </div>

      <!-- タイトル -->
      <h1 class="text-4xl md:text-5xl font-bold text-wine-000 mb-3">
        ワイン診断
      </h1>

      <!-- サブタイトル -->
      <p class="text-wine-000 text-lg mb-8">
        あなたにぴったりのワインを見つけましょう
      </p>

      <!-- 装飾 -->
      <div class="mt-8 flex justify-center space-x-2">
        <span class="text-wine-000">◆</span>
        <span class="text-wine-000">◆</span>
        <span class="text-wine-000">◆</span>
      </div>
    </div>
  </div>
      <!-- 診断開始ボタン -->
  <div class="space-y-4">
    <%= link_to diagnoses_start_path,
                class: 'block bg-wine-800 text-white text-lg font-semibold px-8 py-4 rounded-xl hover:bg-wine-800 transition transform hover:scale-105 shadow-lg text-center' do %>
      <span class="flex items-center justify-center">
        <span class="mr-2"></span>
        <span>診断を始める</span>
        <span>→</span>
      </span>
  <% end %>
</div>